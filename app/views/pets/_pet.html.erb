<div class="card" style="width: 18rem;">
  <img src="<%= pet.url %>" class="card-img-top" alt="<%= pet.name %>" width="354" height="222" >
  <div class="card-body">
    <h5 class="card-title"><%= pet.name %></h5>
    <p class="card-text"><small class="text-body-secondary"><%= pet.breed %></small></p>
    <p class="card-text"><%= pet.description %></p>
    <div class="container text-center">
      <div class="row">
        <div class="col-6 d-grid">
          <%= link_to 'Edit', edit_pet_path(pet), class: 'btn btn-primary btn-lg btn-block', data: { "turbo-prefetch": false, turbo_frame: "list_pets" } %>
        </div>
        <div class="col-6 d-grid">
          <%= link_to 'Delete', pet_path(pet), class: 'btn btn-danger btn-lg btn-block', data: { turbo_confirm: 'Are you sure?', method: :delete, turbo_method: :delete } %>
        </div>
      </div>
    </div>
  </div>
</div>
